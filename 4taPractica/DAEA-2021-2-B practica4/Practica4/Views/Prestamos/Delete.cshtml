@model Prestamos
@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18"><i class="fas fa-table"></i> Eliminar Préstamo</h4>
        </div>
    </div>
</div>

<br />

<div class="row">
    <div class="col-12">
        <div class="card">

            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="form-horizontal">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group row" style="margin-bottom:1rem;">
                            <label asp-for="CategoryID" class="col-form-label col-md-2" style="color:black">ID</label>
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.IdPrestamo,
                                    new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>

                        <div class="form-group row" style="margin-bottom:1rem;">
                            <label asp-for="CategoryID" class="col-form-label col-md-2" style="color:black">ID Libro</label>
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.IdLibro,
                                    new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>
                        
                        <div class="form-group row" style="margin-bottom:1rem;">
                            <label asp-for="CategoryID" class="col-form-label col-md-2" style="color:black">ID Usuario</label>
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.IdUsuario,
                                    new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>

                        <div class="form-group row" style="margin-bottom:1rem;">
                            <label asp-for="CategoryName" class="col-form-label col-md-2" style="color:black">Inicio Préstamo</label>
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.FecPrestamo, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group row" style="margin-bottom:1rem;">
                            <label asp-for="Description" class="col-form-label col-md-2">Fin Préstamo</label>
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.FecDevolucion, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Eliminar" class="btn btn-sm btn-primary" /> |
                            
                            <a class="btn btn-sm btn-danger" style="text-decoration: none" href="/">Cancelar</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
